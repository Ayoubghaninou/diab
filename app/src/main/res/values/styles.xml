<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_activity</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="isLightTheme">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <!-- Toolbar -->

    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <!-- Insulin editor -->
    <style name="AppTheme.DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Glucose editor -->

    <style name="AppTheme.GlucoseEditor_Info" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.GlucoseEditor_Edit" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="Apptheme.GlucoseEditor_Key" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <!-- Settings -->

    <style name="AppTheme.SettingsTheme" parent="@style/AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/AppTheme.PreferenceDialog</item>
    </style>

    <style name="AppTheme.PreferenceDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
