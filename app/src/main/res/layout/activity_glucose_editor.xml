<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glucose_editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.diab.ui.NumericKeyboardView
        android:id="@+id/glucose_editor_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/glucose_editor_base_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background_card"
        app:contentPadding="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                style="@style/AppTheme.GlucoseEditor_Layout"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/glucose_editor_value_icon"
                    style="@style/AppTheme.GlucoseEditor_Icon"
                    android:src="@drawable/ic_blood" />

                <TextView
                    android:id="@+id/glucose_editor_edit_value"
                    style="@style/AppTheme.GlucoseEditor_Editable"
                    tools:text="128" />
            </LinearLayout>

            <LinearLayout style="@style/AppTheme.GlucoseEditor_Layout">

                <ImageView
                    android:id="@+id/glucose_editor_date_icon"
                    style="@style/AppTheme.GlucoseEditor_Icon"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/glucose_editor_edit_date"
                    style="@style/AppTheme.GlucoseEditor_Editable"
                    tools:text="04-08-2017 18:54" />
            </LinearLayout>

            <LinearLayout style="@style/AppTheme.GlucoseEditor_Layout">

                <ImageView
                    style="@style/AppTheme.GlucoseEditor_Icon"
                    android:src="@drawable/ic_eat" />

                <it.diab.ui.EatBar
                    android:id="@+id/glucose_editor_eat_bar"
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/glucose_editor_insulin_layout"
                style="@style/AppTheme.GlucoseEditor_Layout">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_editor_insulin" />

                <TextView
                    android:id="@+id/glucose_editor_insulin_value"
                    style="@style/AppTheme.GlucoseEditor_Editable"
                    tools:text="Novorapid 4.5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/glucose_editor_insulin_basal_layout"
                style="@style/AppTheme.GlucoseEditor_Layout"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_editor_basal" />

                <TextView
                    android:id="@+id/glucose_editor_insulin_basal_value"
                    style="@style/AppTheme.GlucoseEditor_Editable"
                    tools:text="Lantus 20" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:transitionName="@string/transition_glucose_fab"
        app:layout_constraintBottom_toTopOf="@+id/glucose_editor_keyboard"
        app:layout_constraintEnd_toEndOf="@id/glucose_editor_keyboard"
        app:srcCompat="@drawable/ic_done"
        tools:layout_editor_absoluteX="304dp"
        tools:targetApi="lollipop" />

    <ScrollView
        android:id="@+id/glucose_editor_show_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glucose_editor_base_card"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.robinhood.spark.SparkView
                android:id="@+id/glucose_editor_graph"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                app:spark_lineColor="@color/colorAccent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/glucose_editor_info"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="8dp"
                tools:text="Hello world" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
