<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glucose_editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.diab.ui.NumericKeyboardView
        android:id="@+id/glucose_editor_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/glucose_editor_base_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/background_card"
        app:contentPadding="16dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Info"
                    android:text="@string/glucose_editor_value" />

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Edit"
                    android:id="@+id/glucose_editor_edit_value"
                    android:maxLines="1"
                    tools:text="128" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Info"
                    android:text="@string/glucose_editor_time" />

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Edit"
                    android:id="@+id/glucose_editor_edit_date"
                    tools:text="04-08-2017 18:54" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/glucose_editor_insulin_0_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Info"
                    android:id="@+id/glucose_editor_insulin_0_title"
                    android:text="@string/glucose_editor_insulin_add" />

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Edit"
                    android:id="@+id/glucose_editor_insulin_0_value"
                    tools:text="Novorapid 4.5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/glucose_editor_insulin_1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Info"
                    android:id="@+id/glucose_editor_insulin_1_title"/>

                <TextView
                    style="@style/AppTheme.GlucoseEditor_Edit"
                    android:id="@+id/glucose_editor_insulin_1_value"
                    tools:text="Lantus 20" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@id/glucose_editor_keyboard"
        app:layout_constraintBottom_toTopOf="@+id/glucose_editor_keyboard"
        android:transitionName="@string/transition_glucose_fab"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_done"
        tools:targetApi="lollipop"
        tools:layout_editor_absoluteX="304dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/glucose_editor_base_card"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.robinhood.spark.SparkView
                android:id="@+id/glucose_editor_graph"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                app:spark_lineColor="@color/colorAccent" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/glucose_editor_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:textAlignment="viewStart"
                tools:text="Hello world" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
