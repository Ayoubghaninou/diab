<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.diab">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="screenLayout|orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".glucose.editor.EditorActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".insulin.InsulinActivity"
            android:label="@string/insulin_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".insulin.editor.EditorActivity"
            android:label="@string/insulin_editor_name"
            android:theme="@style/AppTheme.DialogActivity" />

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings_name"
            android:theme="@style/AppTheme.SettingsTheme" />

        <service
            android:name=".glucose.export.ExportGlucoseService"
            android:enabled="true" />
    </application>
</manifest>
