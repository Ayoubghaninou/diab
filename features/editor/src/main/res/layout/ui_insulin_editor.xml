<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/editor_bolus_dialog_title_insulin" />

    <EditText
        android:id="@+id/nameField"
        style="@style/AppTheme.Field.Value"
        android:background="@null"
        android:hint="@string/editor_field_name"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Insulin ABC" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/isBasalField"
        style="@style/AppTheme.Field.Value"
        android:text="@string/editor_field_basal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameField"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/isHalfUnitsField"
        style="@style/AppTheme.Field.Value"
        android:text="@string/editor_field_half_units"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isBasalField"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/positiveBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isHalfUnitsField"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        tools:text="@string/action_save" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/negativeBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_delete"
        app:layout_constraintEnd_toStartOf="@id/positiveBtn"
        app:layout_constraintTop_toTopOf="@id/positiveBtn"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />
</androidx.constraintlayout.widget.ConstraintLayout>
